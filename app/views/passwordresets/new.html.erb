
<div class="container">

	<div class="row">
        <div class="col-md-12">
			<h1>Enter your username, Reset Password</h1>
		</div>
 	</div>

	<div class="row">
        <div class="col-md-8">
        	<%= form_tag passwordreset_profile_path, :method => :post do %>
  				<div class="form-group">
    					<%= label_tag :email %>						
						<%= text_field_tag :email,params[:email] %>
						</div>
  				<div class="actions"><%= submit_tag "Reset Password", class: "btn btn-primary"%></div>
  				</div>  				
			<% end %>
    	</div>

	</div>
</div>