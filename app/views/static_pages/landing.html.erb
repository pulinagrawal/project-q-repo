<div class="row">
    <div class="col-lg-6">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <p>Title Stuff goes here</p>
                        <p>Panel class can be modified to change the look</p>
                    </div>
                    <div class="panel-footer">
                        Title
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <p>Rank Stuff goes here</p>
                        <p>Panel class can be modified to change the look</p>
                    </div>
                    <div class="panel-footer">
                        Rank
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <p>Points Stuff goes here</p>
                        <p>Panel class can be modified to change the look</p>
                    </div>
                    <div class="panel-footer">
                        Points
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="list-group">
                <a class="list-group-item active" href="#">Recommended Quizzees</a>
                <a class="list-group-item" href="">
                       
                            <% maximum = @done.max 
                                
                                for i in 0..@done.count
                                    if @done[i] == maximum
                                        @index = i
                                        break        
                                    else    
                                        i=i+1                                        
                                    end 
                                end                                            
                            %> 
                            <%= Category.find(@index+1).category_name%>                        
                </a>
                <a class="list-group-item" href="">
                    <%      
                            minimum = @done.min 
                                
                                for i in 0..@done.count
                                    if @done[i] == minimum
                                        @index_1 = i
                                        break        
                                    else    
                                        i=i+1                                        
                                    end 
                                end                                            
                            %> 
                            <%= Category.find(@index_1+1).category_name%>
                </a>
                <a class="list-group-item" href="">Category3</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
            <%= render template: "quizzes/index" %>
    </div>
</div>
    
