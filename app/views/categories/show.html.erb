
<div class="row">
    <div class="col-md-3">
       <h1>Categories</h1>
    </div>
</div>

<div class="row">
    <% if @categories.empty? %>
        No records found!
    <% else %>
        <% @categories.each do |c| %>
            <div class="col-md-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"><%= c.category_name %></h3>
                    </div>
                    <div class="panel-body">
                        <h4><b>Select your Level</b></h4>

                        <ul class="list-group">
                            <% (1..3).each do |level| %>
                                <li class="list-group-item">
                                    <%= link_to "Level #{level}", newquiz_path(category: c, level: level.to_s) %>
                                    <% if c.recommend.level == level %>
                                        <span class="badge">
                                            <span class="glyphicon glyphicon-record"></span>
                                            Recommended
                                        </span>
                                    <% end %>
                                </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        <% end %>
    <% end %>
</div>
