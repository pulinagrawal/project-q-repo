<div class="row">
    <div class="col-md-6 list-group">
        <h1>Quizzes Taken by Category</h1>
        <% @categories.each do |c| %>
            <a href="#" class="list-group-item">
                <%= c.category_name %>:
                <%= c.stats.quiz_percent(@total_count) %>% of quizzes,
                <%= c.stats.percent_correct %>% of questions correct
            </a>
        <% end %>
    </div>

    <div class="col-md-6 list-group">
        <h1>Quizzes Taken by Age Group</h1>
        <a href="#" class="list-group-item">
            People near your age generally get <%=(@peer_percent * 100.0).round%>%
            questions correct.
        </a>
        <% @AGE_GROUPS.keys.each do |grp| %>
            <a href="#" class="list-group-item">
                <%= grp %>:
                <%= @age_stats[grp].quiz_percent(@total_count) %>% of quizzes,
                <%= @age_stats[grp].percent_correct %>% of questions correct
            </a>
        <% end %>
    </div>
</div>
