<div class="row">
    <div class="col-md-12">
        <h1>Quiz</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <%= form_for(@quiz, url: url_for(:action => 'answer')) do |f| %>
        
            <% if @quiz.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@quiz.errors.count, "error") %> kept you from moving forward!</h2>
                    <ul>
                    <% @quiz.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                    </ul>
                </div>
            <% end %>
        
            <h3>Question <%=@current_question_num%></h3>
            <div class="question">
                <%=@current_question%>
            </div>
            <%= f.text_field :answer, :value => "" %>
            <button class="btn btn-primary">Answer!</button>
        <% end %>
    </div>
    <div class="col-md-4">
        You are on Question <%=@current_question_num%> of 5
    </div>
</div>
