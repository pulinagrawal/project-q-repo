<head>
<style>
table, th, td {
    border: 0px solid black;
    padding: 5px;
}
table {
    border-spacing: 15px;
}
</style>
</head>

<h1>Edit Profile</h1>

<h1> Create New Profile</h1>

<%= form_for(@profile) do |f| %>
	<table>
		<tr>
			<td><%= f.label :first_name %></td>
			<td><%= f.text_field :first_name, placeholder: "First Name" %></td>
	</tr>

	<tr>
			<td><%= f.label :last_name %></td>
			<td><%= f.text_field :last_name, placeholder: "Last Name" %></td>
	</tr><br>


    <tr>
			<td><%= f.label :birthday %></td>
			<td><%= f.text_field :birthday, placeholder: "Birthday" %></td>
	</tr>

    <tr>
			<td><%= f.label :password %></td>
			<td><%= password_field_tag(:password, "", placeholder: "Password") %></td>
	</tr>

    <tr>
			<td><%= f.label :email %></td>
			<td><%= f.text_field :email, placeholder: "Email" %></td>
	</tr>

 

    <tr><td></td>
      	<td><%= f.submit "Update Profile" %></td>
	</tr>


<% end %>