
	<div class="row">
		<div class="col-md-10">
		   <h3>Congrats, you just earned
           <span class="badge alert-success"><%=@quiz_score%></span>
           points!
           </h3>
		</div>
	</div>

	<div class="row">
		<div class="col-md-8">
			<div class="panel panel-primary">
  				<div class="panel-heading">
    					<h2 class="panel-title">Result</h2>
  				</div>
  				<div class="panel-body">
  							<% @@counter = 0 %>
