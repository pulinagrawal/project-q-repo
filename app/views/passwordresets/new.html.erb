
<div class="container">

	<div class="row">
        <div class="col-md-12">
			<h1>Reset your password</h1>
		</div>
 	</div>

	<div class="row">
        <div class="col-md-8">
        	<%= form_tag passwordreset_profile_path, :method => :post do %>
  				<div class="form-group">
    					<%= label_tag :email, :class => "col-md-2 control-label" %>
						<div class="col-md-10">
							<%= text_field_tag :email, placeholder: "Email XXXX@XXX.XXX", :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}'  ,:class => "form-control" %>
						</div>
  				</div>
  				<div class="actions"><%= submit_tag "Reset Password" %></div>
			<% end %>
    	</div>

	</div>
</div>