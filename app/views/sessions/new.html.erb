<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path, :html => {:class => "form-horizontal"}) do |f| %>

                     <div class="form-group">
                          <%= f.label :email, :class => "col-md-2 control-label" %>
                          <div class="col-md-10">
                              <%= f.text_field :email, placeholder: "Email XXXX@XXX.XXX", :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}'  ,:class => "form-control" %>
                          </div> 
                     </div> 

                    <div class="form-group">
                          <%= f.label :password , :class => "col-md-2 control-label"%>
                          <div class="col-md-10">
                          <%= f.password_field :password, :placeholder => "Password", :required => true, :class => "form-control" %>
                          </div> 
                     </div>

                   
                      <div class="form-group">
                            <%= f.submit "Sign In", :class => "btn btn-primary" %>
                    </div>
    <% end %>

    
  </div>
</div>
